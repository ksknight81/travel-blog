<div class="col-12">
    <h1 class="border-bottom border-dark mt-4">{{post.title}}</h1>
</div>

<div class="col-12">
    <p class="text-muted">{{post.city}}, {{post.country}} - {{post.travel_date}} - {{post.user}} </p>

    <p class="text-muted">Rating: {{post.rating}} <span><i class="fa-solid fa-star"></i></span></p>
</div>

<div class="col-12 text-center">
    <img src="./images/montego_bay.jpeg" class="rounded w-50 h-auto my-4" >
</div>

<div class="col-12">
    <p>
        {{post.blog}}
    </p>
</div>

<div class="col-12 mb-3">
    <h2 class="border-bottom border-secondary text-muted">Comments</h2>
</div>

<form class="mb-3">
    
        
    <label for="comment" class="form-label">Add Comment</label>

    <textarea name="comment" class="form-control mb-2" rows="2"></textarea>      
    
    <button type="submit" class="btn btn-primary">Submit</button>
    
</form>

{{#each post.comments as |comment|}}

{{> comment comment}}

{{/each}}