<article class="col-12 border border-dark rounded p-3 my-2 bg-light" data-post-id="{{id}}">
    <div clas="container">
        <div class="row">

            <div class="col-md-12 col-lg-2 d-flex align-items-center">
                <h3>{{title}}</h3>
            </div>

            <div class="col-md-12 col-lg-2 d-flex flex-column align-items-center justify-content-center">
                            <p class="text-center text-muted mb-0">{{city}}, {{country}} - {{travel_date}}</p>
                            <p class="text-center text-muted mb-1">Trip Rating: {{rating}} <span><i class="fa-solid fa-star"></i></span></p>
                        </div>

            <div class="col-md-12 col-lg-3 d-flex align-items-center">
                {{!-- <img src="/images/{{image}}" class="rounded img-fluid"> --}}
                 <img src="/images/00e6aab39d5fd8e4ced071c2cc7870c7" class="rounded img-fluid">
            </div>

            <div class="col-md-12 col-lg-5 d-flex align-items-center d-none d-sm-block">
                <p>{{blog}}</p>
            </div>
        </div>
    </div>
</article>