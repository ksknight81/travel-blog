<div class="col-12 p-0 d-flex justify-content-between">
    <h1>Latest</h1>

    {{#if loggedIn}}
    <div class="d-flex align-items-center">
       <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#sign-in-modal">ogin/signup</button>
    </div>

    {{else}}
    <div class="d-flex align-items-center">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#sign-in-modal">ogin/signup</button>
    </div>

    {{/if}}
    
    {{#each posts as |post|}}
        {{> single-post post}}
    {{#/each}}
</div>