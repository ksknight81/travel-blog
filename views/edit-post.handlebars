<div class="card col-12 col-md-8 bg-light my-5">
    <div class="card-body">
        <h1 class="card-title text-center">Edit Post</h1>

        <form enctype="multipart/form-data" action="upload/post">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name='title' class="form-control" id="title" value="{{post.title}}">
            </div>

            <div class="mb-3">

            </div>

            <div class="mb-3">
                <label for="city" class="form-label">City</label>
                <input type="text" name='city' class="form-control" id="city" value="{{post.city}}">
            </div>
            
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name='country' class="form-control" id="country" value="{{post.country}}">
            </div>

            <div class="mb-3">
                <label for="rating" class="form-label">Select Rating</label>
                <select class="form-select" name="rating" id="rating" value="{{post.rating}}">
                    <option selected value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    </select>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Add Photo</label>
                <input type="file" name="image" class="form-control form-control-sm" id="image">
            </div>

            <div class="mb-3">
                <label for="blog-entry" class="form-label">Blog Entry</label>
                <textarea class="form-control" name='blog-entry' id="blog-entry" rows="5">{{post.blog}}</textarea>
            </div>
            <div>
                <button type="submit" id="submit-edit" class="btn btn-primary" data-user-id="{{post.user_id}}">Post</button>

                <button type="button" id="delete-post" class="btn btn-danger" data-user-id="{{post.user_id}}">Delete Post</button>
            </div>
            
        </form>
    </div>
</div>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/js/new-post.js"></script>
<script src="/js/edit-post.js"></script>